#!/bin/sh

# Show wifi ï‡« and percent strength or ï² if none.
# Show ðŸŒ if connected to ethernet or ïž if none.

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e nmtui & ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
ï²: no wifi connection
ï‡«: wifi connection with quality
ïž: no ethernet
ðŸŒ: ethernet working
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ï² " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "%s%s\n" "$wifiicon" "$(sed "s/down/ïž/;s/up/ðŸŒ/" /sys/class/net/e*/operstate 2>/dev/null)"
